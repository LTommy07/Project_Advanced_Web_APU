extends layout

block content
  h1 Create New Quiz
  
  if error
    p.error= error

  form(method='POST', action='/instructor/quizzes')
    div
      label(for='title') Title:
      input(type='text', name='title', id='title', value=quiz.title, required)
    
    div
      label(for='description') Description:
      textarea(name='description', id='description', rows='4')= quiz.description
    
    div
      label(for='time_limit') Time Limit (minutes, optional):
      input(type='number', name='time_limit', id='time_limit', min='1', value=quiz.time_limit, placeholder='No limit')
      small Leave empty for no time limit
    
    button(type='submit') Create Quiz
    a(href='/instructor/quizzes') Cancel

  style.
    form div {
      margin-bottom: 15px;
    }
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }
    input[type='text'], input[type='number'], textarea {
      width: 100%;
      padding: 8px;
      border: 1px solid #ddd;
      border-radius: 4px;
    }
    small {
      display: block;
      color: #666;
      margin-top: 5px;
    }
    button {
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-right: 10px;
    }
    button:hover {
      background-color: #0056b3;
    }
    .error {
      color: red;
      padding: 10px;
      background-color: #ffebee;
      border-radius: 4px;
      margin-bottom: 15px;
    }
