extends layout

block content
  .quiz-form-container
    h2 üìù Create New Quiz

    if error
      .alert.alert-error= error

    form(method='POST', action='/instructor/quizzes')
      .form-group
        label(for='title') Quiz Title *
        input#title(
          type='text',
          name='title',
          placeholder='Enter quiz title',
          required,
          minlength='3',
          maxlength='255',
          value=quiz.title || '',
          title='Title must be 3-255 characters'
        )

      .form-group
        label(for='description') Description
        textarea#description(
          name='description',
          placeholder='Describe what this quiz is about...',
          maxlength='1000'
        )= quiz.description || ''

      .form-group
        label(for='time_limit') Time Limit (minutes)
        input#time_limit(
          type='number',
          name='time_limit',
          placeholder='Leave empty for no limit',
          min='1',
          max='180',
          value=quiz.time_limit || ''
        )
        small Optional: 1-180 minutes

      button(type='submit') Create Quiz

    .auth-link
      a(href='/instructor/quizzes') ‚Üê Back to My Quizzes
