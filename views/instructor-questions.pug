extends layout

block content
  h2 Questions for "#{quiz.title}"

  p
    a(href="/instructor/quizzes") ‚Üê Back to My quizzes

  if !questions || questions.length === 0
    p No questions yet.
  else
    table
      thead
        tr
          th #
          th Question
          th Options
          th Correct
      tbody
        each q, index in questions
          tr
            td= index + 1
            td= q.question_text
            td
              p A: #{q.option_a}
              p B: #{q.option_b}
              p C: #{q.option_c}
              p D: #{q.option_d}
            td= q.correct_option

  hr

  h3 Add a new question

  form(action=`/instructor/quizzes/${quiz.id}/questions` method="post")
    div
      label(for="question_text") Question:
      textarea#question_text(name="question_text" required)

    div
      label(for="option_a") Option A:
      input#option_a(type="text" name="option_a" required)

    div
      label(for="option_b") Option B:
      input#option_b(type="text" name="option_b" required)

    div
      label(for="option_c") Option C:
      input#option_c(type="text" name="option_c" required)

    div
      label(for="option_d") Option D:
      input#option_d(type="text" name="option_d" required)

    div
      label(for="correct_option") Correct option:
      select#correct_option(name="correct_option" required)
        option(value="A") A
        option(value="B") B
        option(value="C") C
        option(value="D") D

    div
      button(type="submit") Add question
