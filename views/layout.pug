doctype html
html
  head
    title= title || 'AWP Quiz Platform'
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/forms.css')
    link(rel='stylesheet', href='/stylesheets/responsive.css')
    link(rel='stylesheet', href='/stylesheets/components.css')
  
  body
    header
      nav.navbar
        a.nav-brand(href='/') ðŸŽ“ Quiz Platform
        
        input#nav-toggle.nav-toggle(type='checkbox')
        label.nav-toggle-label(for='nav-toggle')
          span
        
        .nav-links
          if user
            a(href='/dashboard') Dashboard
            
            if user.role === 'instructor'
              a(href='/instructor/quizzes') My Quizzes
            else
              a(href='/student/quizzes') Available Quizzes
              a(href='/student/results') My Results
            
            span.user-info ðŸ‘¤ #{user.name}
            form.logout-form(method='POST', action='/logout')
              button.btn-logout(type='submit') Logout
          else
            a(href='/') Home
            a(href='/login') Login
            a(href='/register') Register

    main.container
      block content
