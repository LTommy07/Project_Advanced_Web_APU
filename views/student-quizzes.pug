extends layout

block content
  h1 Available Quizzes
  
  if quizzes && quizzes.length > 0
    .quiz-list
      each quiz in quizzes
        .quiz-card
          h2= quiz.title
          p.description= quiz.description || 'No description'
          .quiz-meta
            p Instructor: #{quiz.instructor_name}
            p Questions: #{quiz.question_count || 0}
            if quiz.time_limit
              p Time Limit: #{quiz.time_limit} minutes
            p Created: #{new Date(quiz.created_at).toLocaleDateString()}
          a.btn(href=`/student/quizzes/${quiz.id}/take`) Take Quiz
  else
    p No quizzes available yet.
  
  a(href='/student/results') View My Results History

  style.
    .quiz-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }
    .quiz-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 20px;
      background-color: #f8f9fa;
      transition: box-shadow 0.3s;
    }
    .quiz-card:hover {
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .quiz-card h2 {
      margin-top: 0;
      color: #333;
    }
    .description {
      color: #666;
      margin: 10px 0;
    }
    .quiz-meta p {
      margin: 5px 0;
      font-size: 0.9em;
      color: #666;
    }
    .btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      margin-top: 10px;
    }
    .btn:hover {
      background-color: #0056b3;
    }
